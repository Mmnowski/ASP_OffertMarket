@model GASPG.Models.ViewModel.GenreViewModels.DetailsGenreViewModel

@{
    ViewData["Title"] = "Genre details";
}

<h3>@ViewData["Title"]</h3>
<hr />
<div>
    <dl class="dl-horizontal">
        <dt>
            <label asp-for="@Model.Name"></label>
        </dt>
        <dd>
            <p asp-display-for="@Model.Name"></p>
        </dd>
    </dl>
    <a asp-action="Edit" asp-route-id="@Model.GenreId" class="btn btn-primary btn-sm">Edit</a>
    <a asp-action="Index" class="btn btn-default btn-sm">Back to list</a>
</div>
